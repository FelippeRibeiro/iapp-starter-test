{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "cwd": "${workspaceFolder}/server",
      "program": "${workspaceFolder}/server/src/main.ts",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/server/tsconfig.json"
      }
    }
  ]
}
